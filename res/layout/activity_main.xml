<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context="com.jk.mwifi.MainActivity" >

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin_left"
        android:layout_marginRight="@dimen/activity_margin_right"
        android:layout_marginTop="@dimen/activity_margin_top"
        android:background="@drawable/shape_round_rect"
        android:padding="@dimen/layout_padding"
        android:text="wifi开关" />

    <com.jk.mwifi.custome.view.MyListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/activity_margin_left"
        android:layout_marginRight="@dimen/activity_margin_right"
        android:layout_marginTop="@dimen/activity_margin_top"
        android:layout_weight="100"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/divider_height"
        android:listSelector="@android:color/transparent" >
    </com.jk.mwifi.custome.view.MyListView>

</LinearLayout>